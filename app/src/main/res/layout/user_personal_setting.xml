<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlay_scrll"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Edit My Account Information"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:text="*"
                android:gravity="top"
                android:layout_marginTop="6dp"
                /></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edttxet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/edittext_fname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"

                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/user_name"
                android:gravity="center_vertical"

                android:hint="First Name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textColorHint="#bdbdbd" >
            </EditText>
            <requestFocus/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/editText_lname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"

                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/user_name"

                android:gravity="center_vertical"

                android:hint="Last Name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textColorHint="#bdbdbd" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_facebookurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/editText_facebookurl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"

                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/facebookeditbox"

                android:gravity="center_vertical"

                android:hint="Facebook Url"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textColorHint="#bdbdbd" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_twitterurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/editText_twitterurl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"

                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/twittereditbox"

                android:gravity="center_vertical"

                android:hint="Twitter Url"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textColorHint="#bdbdbd" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_linkurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/editText_linkurl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"

                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/linkedineditbox"

                android:gravity="center_vertical"

                android:hint="Linkedin Url"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textColorHint="#bdbdbd" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/editText_instagram"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"

                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/instagrameditbox"

                android:gravity="center_vertical"

                android:hint="Instagram Url"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textColorHint="#bdbdbd" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_addressone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/editText_addressone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/user_name"
                android:gravity="center_vertical"
                android:hint="Address Line "
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textColorHint="#bdbdbd" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_addresstwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/editText_addresstwo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"

                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/user_name"

                android:gravity="center_vertical"

                android:hint="Address Line"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textColorHint="#bdbdbd" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_edttxet_mbileno"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="10dp"
                android:imeOptions="actionNext"
                android:id="@+id/spinner_country"
                android:singleLine="true"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"

                android:textColorHint="#bdbdbd" />

            <!-- <EditText
                  android:id="@+id/editText_country"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"

                  android:drawablePadding="10dp"
                  android:imeOptions="actionNext"

                  android:singleLine="true"
                  android:ems="10"
                  android:drawableLeft="@drawable/mail"
                  android:textSize="14dp"
                  android:gravity="center_vertical"
                  android:hint="Select Country"
                  android:inputType="textEmailAddress"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textColor="#868686"
                  android:textColorHint="#bdbdbd" >
              </EditText>-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_edttxet_mbileno"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="10dp"
                android:imeOptions="actionNext"
                android:id="@+id/spinner_state"
                android:singleLine="true"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"

                android:textColorHint="#bdbdbd" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edttxet_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_edttxet_name"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="10dp"
                android:imeOptions="actionNext"
                android:id="@+id/spinner_city"
                android:singleLine="true"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"

                android:textColorHint="#bdbdbd" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_radiogroup_gender"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/edt_zipcode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:imeOptions="actionDone"
                android:layout_centerHorizontal="true"
                android:clickable="true"

                android:focusable="true"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:drawableLeft="@drawable/dob"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="Zip Code"
                android:inputType="number"
                android:textColor="@color/black"
                android:drawablePadding="13dp"
                android:textColorHint="#bdbdbd" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_mailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_edttxet_mbileno"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Communication Prefrences"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:id="@+id/textView11"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_light"
                    android:text="*"
                    android:gravity="top"
                    android:layout_marginTop="6dp"
                    android:id="@+id/textView12"/></LinearLayout>



            <LinearLayout
                android:id="@+id/ll_describstn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ll_radiogroup_gender"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:paddingLeft="7dp"
                    android:layout_weight="1"
                    android:id="@+id/checkBox_email"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:paddingLeft="7dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:id="@+id/checkBox_phone"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:paddingLeft="7dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:id="@+id/checkBox_text"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Update"
            android:textAllCaps="true"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/button_update"
            android:background="@drawable/button"
            android:drawableRight="@drawable/arrow_white"
            android:drawablePadding="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>


</ScrollView>
