<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ColorPrimary"
    android:elevation="2dp"
    app:theme="@style/ToolbarSearchView"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_navi"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"

        >
         <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/arrow_back"
            android:visibility="gone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editText_search"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint=""
            android:textSize="15sp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:drawableRight="@drawable/cross_white"
            android:drawableBottom="@drawable/grey_line"
            android:layout_gravity="center_vertical"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20dp"
            android:layout_marginLeft="15sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/text_title"/>

        <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Search Rental Items and Services"
    android:textSize="14dp"
    android:textColor="@android:color/white"
    android:textStyle="bold"
    android:drawablePadding="5pt"
   android:visibility="visible"
    android:id="@+id/toolbar_title" />

    </LinearLayout>
 </LinearLayout>
    </android.support.v7.widget.Toolbar>


