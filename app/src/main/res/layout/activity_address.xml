            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please Enter Details"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView11"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:text="*"
            android:gravity="top"
            android:layout_marginTop="6dp"
            android:id="@+id/textView12"/></LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >



            <EditText
                android:id="@+id/editText_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"

                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/user_name"
                android:gravity="center_vertical"

                android:hint="Street Address"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="#757575"
                android:textColorHint="#bdbdbd" >
            </EditText>
            <requestFocus/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/editText_address2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"

                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/user_name"
                android:gravity="center_vertical"

                android:hint="Street Address 2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="#757575"
                android:textColorHint="#bdbdbd" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_mailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_edttxet_mbileno"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >
<Spinner
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:drawablePadding="10dp"
    android:imeOptions="actionNext"
    android:id="@+id/spinner_country"
    android:singleLine="true"
    android:ems="10"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:textColor="#868686"

    android:textColorHint="#bdbdbd" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_edttxet_mbileno"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

           <!-- <EditText
                android:id="@+id/editText_state"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:drawablePadding="13dp"
                android:imeOptions="actionNext"

                android:singleLine="true"
                android:ems="10"
                android:textSize="14dp"
                android:drawableLeft="@drawable/user_id"
                android:gravity="center_vertical"
                android:hint="Select State"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#868686"
                android:textColorHint="#bdbdbd" >
            </EditText>-->
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="10dp"
                android:imeOptions="actionNext"
                android:id="@+id/spinner_state"
                android:singleLine="true"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#868686"

                android:textColorHint="#bdbdbd" />
        </LinearLayout>

        <LinearLayout
