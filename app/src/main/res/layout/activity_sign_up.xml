<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mainlay_scrll"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center"
            tools:context="com.erginus.fithealthy.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/edittext_fname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/user_name"
                android:gravity="center_vertical"
                android:hint="First Name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="#757575"
                android:textColorHint="#bdbdbd" >
            </EditText>
            <requestFocus/>


            <EditText
                android:id="@+id/editText_lname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"

                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/user_name"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"

                android:hint="Last Name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="#757575"
                android:textColorHint="#bdbdbd" >
            </EditText>

            <EditText
                android:id="@+id/editText_userid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="12dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:ems="10"
                android:textSize="14dp"
                android:drawableLeft="@drawable/user_id"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:hint="User Login"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#868686"
                android:textColorHint="#bdbdbd" >
            </EditText>
            <EditText
                android:id="@+id/editText_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:drawablePadding="12dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:ems="10"
                android:textSize="14dp"
                android:drawableLeft="@drawable/password"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#868686"
                android:textColorHint="#bdbdbd" />


            <EditText
                android:id="@+id/editText_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="12dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:ems="10"
                android:textSize="14dp"
                android:drawableLeft="@drawable/password"

                android:gravity="center_vertical"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#868686"
                android:textColorHint="#bdbdbd" />

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:drawablePadding="10dp"
                android:imeOptions="actionNext"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:ems="10"
                android:drawableLeft="@drawable/mail"

                android:textSize="14dp"
                android:gravity="center_vertical"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#868686"
                android:textColorHint="#bdbdbd" >
            </EditText>

            <EditText
                android:id="@+id/editText_phnno"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:ems="10"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:hint="Primary Contact No."
                android:textSize="14dp"
                android:drawableLeft="@drawable/contact_number"
                android:drawablePadding="10dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="10"

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#868686"
                android:textColorHint="#bdbdbd" >
            </EditText>

            <LinearLayout
                android:id="@+id/ll_describstn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="7dp"
                android:paddingRight="10dp" >
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:id="@+id/day"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/month"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/year"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <!--<Spinner-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="45dp"-->
                <!--android:id="@+id/user_type"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:paddingLeft="20dp"-->
                <!--android:layout_marginTop="7dp"-->
                <!--android:paddingRight="20dp"-->
                <!--/>-->
            <TextView
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Continue"
                android:textAllCaps="true"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/button_continue"
                android:background="@drawable/button"
                android:drawableRight="@drawable/arrow_white"
                android:drawablePadding="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right"/>
               </LinearLayout>
    </LinearLayout>

</ScrollView>