<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlay_scrll"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center"
    tools:context="com.erginus.fithealthy.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bank Account Info"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView11"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:text="*"
                android:gravity="top"
                android:layout_marginTop="6dp"
                android:id="@+id/textView12"/></LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >



            <EditText
                android:id="@+id/editText_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Bank Account Number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="#757575"
                android:textColorHint="#bdbdbd"/>

            <requestFocus/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edttxet_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_textvw"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/editText_card_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Bank Name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:textColor="#757575"
                android:textColorHint="#bdbdbd"
                >
            </EditText>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_describstn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ll_radiogroup_gender"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/editText_cvv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:focusable="true"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="Bank Route Code "
                android:textColor="#868686"
                android:textColorHint="#bdbdbd" >
            </EditText>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Bank Account Accepts Online Payments"

                android:paddingLeft="7dp"
                android:id="@+id/checkBox_1"/>
        </LinearLayout>


        <TextView
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Continue"
            android:textAllCaps="true"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/button_continue"
            android:background="@drawable/button"
            android:drawableRight="@drawable/arrow_white"
            android:drawablePadding="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"/>

    </LinearLayout>

</ScrollView>